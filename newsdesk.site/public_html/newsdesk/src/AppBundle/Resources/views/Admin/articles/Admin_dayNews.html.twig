{% block daysNews %}
    <h3>Новости дня</h3>
    <div style="overflow-y: scroll; height: 500px">
    {% for dayArticle in daysArticles| reverse %}
        <div class="p-3 mb-3 bg-light rounded">
            <h4 class="font-italic">
                <a class="text-dark"
                   href="{{ path('admin_article_item', {category: dayArticle.category.name, id: dayArticle.category.id, item: dayArticle.title}) }}">{{ dayArticle.title }}</a>
            </h4>
            <span class="mb-0">Author: {{ dayArticle.author }}</span>
        </div>
    {% endfor %}
    </div>
{% endblock %}