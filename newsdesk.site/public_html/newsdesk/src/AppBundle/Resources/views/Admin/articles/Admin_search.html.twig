{% extends '@App/Admin/baseAdmin.html.twig' %}

{% block body %}
<div class="container">
    <h3>Результаты поиска</h3>
    {{ form_start(search) }}
    {{ form_widget(search.search, {'attr': {'class': 'form-control', 'placeholder:': 'search'}}) }}
    {{ form_widget(search.submit, {'attr': {'class': 'btn btn-lg  btn-block', 'placeholder:': 'search'}}) }}
    {{ form_end(search) }}
    {% for article in articles %}
        <div class="p-3 mb-3 bg-light rounded">
            <h4 class="font-italic">
                <a class="text-dark"
                   href="{{ path('admin_article_item', {category: article.category.name, id: article.category.id, item: article.title}) }}">{{ article.title }}</a>
            </h4>
            <p class="mb-0">Author: {{ article.author }}</p>
        </div>
    {% endfor %}
</div>

{% endblock %}