<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap.min.css') }}">

</head>

<body style="display: flex; flex-direction: column; justify-content: center; align-items: center; height: 700px">
<h1>Sign In</h1>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-signin" action="{{ path('security_login') }}" method="post">

    <label for="username" class="sr-only" >Username:</label>
    <input style="margin: 10px" class="form-control" type="text" id="username"  name="_username" placeholder="Username" value="{{ last_username }}"/>

    <label for="password" class="sr-only">Password:</label>
    <input style="margin: 10px" class="form-control" type="password" id="password" name="_password" placeholder="Password"/>

    <button style="margin: 10px" type="submit" class="btn btn-lg btn-primary btn-block">login</button>
</form>
</body>
</html>





